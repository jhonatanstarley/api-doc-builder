{
  "name": "api-doc-builder",
  "version": "1.0.0",
  "description": "Gerador de Documentação Padrão de APIs - Starley Interface",
  "author": "Starley Interface",
  "license": "SEE LICENSE IN license.rtf",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && cross-env ELECTRON=true vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder build --win --publish never",
    "electron:build:all": "npm run build && electron-builder build --win --mac --linux --publish never",
    "electron:publish": "npm run build && electron-builder build --win --publish always"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.16.4",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "localforage": "^1.10.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@types/plist": "^3.0.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/verror": "^1.10.11",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^7.1.10",
    "wait-on": "^7.2.0"
  }
}
